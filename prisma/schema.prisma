generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tour {
  id                    String        @id @default(uuid())
  name                  String        @unique
  duration              Int
  maxGroupSize          Int
  difficulty            String
  ratingsAverage        Float         @default(4.5)
  ratingsQuantity       Float         @default(0)
  price                 Float
  priceDiscount         Float?
  summary               String
  description           String?
  imageCover            String
  images                String[]
  createdAt             DateTime      @default(now())
  startDates            DateTime[]
  secretTour            Boolean       @default(false)
}